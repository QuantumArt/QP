<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd" keepVariablesOnReload="true" autoReload="true" throwExceptions="false" internalLogLevel="Error" internalLogFile="c:\logs\nlog-internal.log">

    <variable name="eventId" value="9999" />
    <variable name="udpPort" value="9999" />
    <variable name="appName" value="QP.ConsoleDbUpdate" />
    <variable name="logMessage" value="${longdate} - ${level:uppercase=true}: ${message}" />
    <variable name="defaultLogDir" value="c:\logs\${appName}" />
    <variable name="defaultLogPath" value="${defaultLogDir}\current.log" />
    <variable name="defaultArchivePath" value="${defaultLogDir}\archive\archive_${shortdate}.{##}.log" />
    <variable name="eventLogLayout" value="${logMessage}${newline}Callstack: ${callsite:className=true:includeSourcePath=true:methodName=true:fileName=true}${onexception:${newline}${newline}Exception\: ${exception:maxInnerExceptionLevel=10:format=ToString}${newline}${exception:format=Data}${newline}}" />
    <variable name="customerCodeLayout" value="${when:when=length('${mdc:item=customerCode}') &gt; 0:inner=${newline}CustomerCode\:           ${mdc:item=customerCode}}" />

    <variable name="defaultFileLayoutHeader" value="LogEntry #${counter}:            ${logMessage} LoggerName:             ${logger} PhysicalPath:           ${machinename}::${basedir} [${windows-identity}] ProccessInfo:           ${processname:fullName=true} [pid:${processid}] ${customerCodeLayout}" />
    <variable name="defaultFileLayoutBottom" value="------------------------ ${logMessage} Callstack: ${callsite:className=true:includeSourcePath=true:methodName=true:fileName=true} ${onexception:Exception\: ${exception:maxInnerExceptionLevel=10:format=ToString}${newline}${exception:format=Data}}" />
    <variable name="defaultFileLayout" value="${defaultFileLayoutHeader}${defaultFileLayoutBottom}${newline}" />

    <targets async="true">
      <default-target-parameters xsi:type="File" encoding="utf-8" createDirs="true" keepFileOpen="false" archiveEvery="Day" maxArchiveFiles="20" archiveAboveSize="25000000" writeFooterOnArchivingOnly="true" archiveNumbering="DateAndSequence" enableArchiveFileCompression="false" />

      <target xsi:type="BufferingWrapper" name="default" bufferSize="15" flushTimeout="1500">
        <target xsi:type="File" archiveOldFileOnStartup="true" header="Log was created at ${longdate}${newline}" footer="Log was archived at ${longdate}" layout="${defaultFileLayout}" fileName="${defaultLogPath}" archiveFileName="${defaultArchivePath}" />
      </target>

      <target xsi:type="EventLog" name="eventlog" log="Application" eventId="${eventId}" source="${appName}" onOverflow="Truncate" layout="${eventLogLayout}" />
      <target xsi:type="NLogViewer" name="udp" includeSourceInfo="true" address="udp://127.0.0.1:${udpPort}" />
    </targets>

    <rules>
      <logger name="*" writeTo="udp" minlevel="Trace" />
      <logger name="*" writeTo="eventlog" minlevel="Error" />
      <logger name="*" writeTo="default" minlevel="Info" enabled="true" />
    </rules>
  </nlog>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.1" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Helpers" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="1.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Mvc" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.6.0" newVersion="5.2.6.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.WebPages" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" />
        <bindingRedirect oldVersion="0.0.0.0-11.0.0.0" newVersion="11.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Owin" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.1.0.0" newVersion="3.1.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Owin.Security" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.1.0.0" newVersion="3.1.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="NLog" publicKeyToken="5120e14c03d0593c" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.2.1.0" newVersion="3.2.1.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Practices.EnterpriseLibrary.Common" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
