{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "Scripts/Quantumart",
    "checkJs": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "dom",
      "DOM.Iterable",
      "es5",
      "es2015.promise",
      "scripthost"
    ],
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "Scripts/build"
  },
  "include": [
    "Scripts/Quantumart/**/*",
    "Scripts/**/*.d.ts"
  ],
  "exclude": [
    "Scripts/Quantumart/ckeditor/*/*/**/*"
  ]
}
