{
  "Properties": {
    "Version": "#{GitVersion.Tag}#",
    "BuildVersion": "#{GitVersion.Tag}#.#{GitVersion.CommitsSinceTag}#-#{GitVersion.Sha}#",
    "BackendUrl": "/Backend",
    "DefaultTheme": "QP8",
    "UploadMaxSize": 1024,
    "MaxJsonDeserializerMembers": 5000000,
    "Set500ForHandledExceptions": false,
    "EnableArticleScheduler": false,
    "EnableCommonScheduler": true,
    "QpConfigPollingInterval": "00:00:30",

    "Globalization": {
      "DefaultLanguageId": 1,
      "DefaultCulture": "en-us"
    },

    "Authentication": {
      "WinLogonUrl": "~/WinLogOn",
      "WinLogonIpRanges": [
        {
          "Name": "localhost",
          "BeginIp": "127.0.0.1",
          "EndIp": "127.0.0.2"
        }
      ]
    }
  },

  "ArticleScheduler": {
    "RecurrentTimeout": "00:00:30",
    "PrtgLoggerTasksQueueCheckShiftTime": "03:00:00",
    "MailHost": "exchange10"
  },

  "CommonScheduler": {
    "Name" : "CommonScheduler",

    "DefaultUserId": 1,
    "DefaultLanguageId": 1,
    "Tasks": [
      {
        "Name": "InterfaceNotificationJob",
        "Schedule": "30 * * * * ?",
        "Description" : "Sending notifications"
      },
      {
        "Name": "InterfaceCleanupJob",
        "Schedule": "* 10 * * * ?",
        "Description" : "Clean up notifications"
      },
      {
        "Name": "DisableUsersJob",
        "Schedule": "* 30 8 * * ?",
        "Description" : "Task for disabling users who was inactive during InactivePeriodInDays days. Specified in appsettings.json",
        "SpecifiedConditions":
          {
            "InactivePeriodInDays": "90"
          }
      }
    ]
  },

  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}

