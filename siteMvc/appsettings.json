{
  "Properties": {
    "Version": "#{GitVersion.Tag}#",
    "BuildVersion": "#{GitVersion.Tag}#.#{GitVersion.CommitsSinceTag}#-#{GitVersion.Sha}#",
    "BackendUrl": "/Backend",
    "DefaultTheme": "QP8",
    "UploadMaxSize": 1024,
    "MaxJsonDeserializerMembers": 5000000,
    "Set500ForHandledExceptions": false,
    "EnableArticleScheduler": false,
    "EnableCommonScheduler": true,
    "QpConfigPollingInterval": "00:00:30",

    "Globalization": {
      "DefaultLanguageId": 1,
      "DefaultCulture": "en-us"
    },

    "Authentication": {
      "WinLogonUrl": "~/WinLogOn",
      "WinLogonIpRanges": [
        {
          "Name": "localhost",
          "BeginIp": "127.0.0.1",
          "EndIp": "127.0.0.2"
        }
      ]
    }
  },

  "ArticleScheduler": {
    "RecurrentTimeout": "00:00:30",
    "PrtgLoggerTasksQueueCheckShiftTime": "03:00:00",
    "MailHost": "exchange10"
  },

  "CommonScheduler": {
    "Name" : "CommonScheduler",

    "DefaultUserId": 1,
    "DefaultLanguageId": 1,
    "Tasks": [
      {
        "Name": "InterfaceNotificationJob",
        "Description" : "Рассылка нотификаций",
        "Schedule": "30 * * * * ?"
      },
      {
        "Name": "InterfaceCleanupJob",
        "Description" : "Очистка нотификаций",
        "Schedule": "* 10 * * * ?"
      },
      {
        "Name": "DisableUsersJob",
        "Description" : "Таск, блокирующий пользователей, которые не заходили в QP более 90 дней. Период задается в значении InactivePeriodInDays в apsettings.config",
        "Schedule": "0 0 10 * * ?",
        "SpecifiedConditions":
          {
              "InactivePeriodInDays": "90"
          }
      }
    ]
  },

  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}

