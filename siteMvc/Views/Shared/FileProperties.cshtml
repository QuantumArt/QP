@using Quantumart.QP8.Resources
@model Quantumart.QP8.WebMvc.ViewModels.Library.FileViewModel

@using (Html.BeginTabForm(Model))
{
  using (Html.BeginFieldGroup(LibraryStrings.Legend_FileParameters))
  {
    @Html.TextBoxFieldFor(s => s.File.Name)
    @Html.DisplayFieldFor(s => s.File.FileTypeName)
    @Html.DisplayFieldFor(s => s.File.Size)
    if (!string.IsNullOrEmpty(Model.File.Dimensions))
    {
        @Html.DisplayFieldFor(s => s.File.Dimensions)
    }

    @Html.DisplayFieldFor(s => s.File.Created)
    @Html.DisplayFieldFor(s => s.File.Modified)
  }
}

@Html.PrepareAndRunInitScript(Model)
