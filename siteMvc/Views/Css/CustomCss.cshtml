@model Quantumart.QP8.WebMvc.ViewModels.CustomCssViewModel

@foreach (var status in Model.Statuses)
{
@:.k-grid tr.k-alt.t-@status.Id:not(.k-state-selected)
@:{
	@:background-color: #@status.AltColor;
@:}

@:.k-grid tr.k-alt.t-@status.Id:hover:not(.k-state-selected)
@:{
  @:background-color: #fff3cf;
@:}

@:.k-grid tr.t-@status.Id:not(.k-state-selected)
@:{
	@:background-color: #@status.Color;
@:}

@:.k-grid tr.t-@status.Id:hover:not(.k-state-selected)
@:{
  @:background-color: #fff3cf;
@:}
}

.hidden {
  display: none;
}
