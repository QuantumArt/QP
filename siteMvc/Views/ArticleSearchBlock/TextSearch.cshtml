  <dd class="field">
    <span class="checkbox">
      @Html.QpCheckBox((string)ViewBag.ExactMatchCheckBoxElementID, null, false, new Dictionary<string, object>())
      @Html.QpLabel((string)ViewBag.ExactMatchCheckBoxElementID, ArticleStrings.SearchBlock_ExactMatchBoxLabelText, false)
    </span>
  </dd>
</dl>

<dl class="row">
  <dt class="label"></dt>
  <dd class="field">
    <span class="checkbox">
      @Html.QpCheckBox((string)ViewBag.StartBeginningCheckBoxElementID, null, false, new Dictionary<string, object>())
      @Html.QpLabel((string)ViewBag.StartBeginningCheckBoxElementID, ArticleStrings.SearchBlock_StartBeginningCheckBoxLabelText, false)
    </span>
  </dd>
</dl>


