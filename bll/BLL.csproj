<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net471;netstandard2.0</TargetFrameworks>
    <Version>2.9.4</Version>
    <AssemblyVersion>2.9.0.0</AssemblyVersion>
    <Authors>Pavel Celut, Sergey Koryakin</Authors>
    <Company>Quantum Art</Company>
    <Product>QP</Product>
    <Description>Internal QP8 API, that could help to write custom administrative modules for QP8</Description>
    <Copyright>Copyright © 2007-2019 Quantum Art</Copyright>
    <AssemblyName>Quantumart.QP8.BLL</AssemblyName>
    <RootNamespace>Quantumart.QP8.BLL</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="2.2.3" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="2.2.3" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="2.2.0" />
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-beta0006" />
    <PackageReference Include="Unity" Version="5.8.13" />
    <PackageReference Include="AutoMapper" Version="8.0.0" />
    <PackageReference Include="QA.Validation.Xaml" Version="1.3.0-portable1" />
    <PackageReference Include="QA.Validation.Xaml.Extensions" Version="1.3.0-portable1" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net471'">
    <Reference Include="System.DirectoryServices" />
    <PackageReference Include="Quantumart" Version="3.3.0" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Quantumart.AspNetCore" Version="3.3.0" />
  </ItemGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <DefineConstants>NET_STANDARD</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(SolutionDir)dal\DAL.csproj" />
    <ProjectReference Include="$(SolutionDir)Merger\Merger.csproj" />
    <ProjectReference Include="$(SolutionDir)Resources\Resources.csproj" />
    <ProjectReference Include="$(SolutionDir)security\Security.csproj" />
    <ProjectReference Include="$(SolutionDir)validators\Validators.csproj" />
    <ProjectReference Include="$(SolutionDir)QuantumArt.Infrastructure\QP8.Infrastructure.Logging.PrtgMonitoring\QP8.Infrastructure.Logging.PrtgMonitoring.csproj" />
    <ProjectReference Include="$(SolutionDir)QuantumArt.Infrastructure\QP8.Infrastructure.Web\QP8.Infrastructure.Web.csproj" />
  </ItemGroup>
</Project>


